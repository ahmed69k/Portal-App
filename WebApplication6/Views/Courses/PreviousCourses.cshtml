@{
    ViewData["Title"] = "Previously Taken Courses";
}

<div class="container mt-4">
    <h1>Previously Taken Courses</h1>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Course Name</th>
                    <th>Instructor</th>
                    <th>Date Completed</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model)
                {
                    <tr>
                        <td>@enrollment.Course.Title</td>
                        <td>@enrollment.Course.Instructor?.Name</td> <!-- Assuming Instructor is related to Course -->
                        <td>@enrollment.CompletedDate.ToString("MM/dd/yyyy")</td>
                        <td><a class="btn btn-info" href="@Url.Action("Details", "Courses", new { id = enrollment.Course.CourseId })">View Details</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No previously taken courses found.</p>
    }
</div>
