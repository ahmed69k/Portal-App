@model IEnumerable<WebApplication6.Models.Course>

<h2>Previously Taken Courses</h2>

@if (!Model.Any())
{
    <p>No previously taken courses found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Course Title</th>
                <th>Learning Objective</th>
                <th>Credits</th>
                <th>Completion Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.LearningObjective</td>
                    <td>@course.CreditPoints</td>
                    <td>@course.CourseEnrollments.FirstOrDefault()?.CompletionDate?.ToString("MM/dd/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}
