@model IEnumerable<WebApplication6.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success btn-sm">Create New Course</a>
</p>

<!-- Display All Courses with Actions -->
<h2>All Courses</h2>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.LearningObjective)</th>
            <th>@Html.DisplayNameFor(model => model.CreditPoints)</th>
            <th>@Html.DisplayNameFor(model => model.DifficultyLevel)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.LearningObjective)</td>
                <td>@Html.DisplayFor(modelItem => item.CreditPoints)</td>
                <td>@Html.DisplayFor(modelItem => item.DifficultyLevel)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-outline-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-outline-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Display Enroll Section -->
<h2>Enroll in New Courses</h2>
<table class="table">
    <thead>
        <tr>
            <th>Course Title</th>
            <th>Learning Objective</th>
            <th>Credit Points</th>
            <th>Difficulty Level</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.LearningObjective</td>
                <td>@course.CreditPoints</td>
                <td>@course.DifficultyLevel</td>
                <td>
                    <a asp-action="CheckPrerequisites" asp-route-courseId="@course.CourseId" asp-route-userId="1" class="btn btn-outline-info btn-sm">Check Prerequisites</a>
                    <a asp-action="Enroll" asp-route-courseId="@course.CourseId" class="btn btn-outline-success btn-sm">Enroll</a>
                </td>
            </tr>
        }
    </tbody>
</table>
