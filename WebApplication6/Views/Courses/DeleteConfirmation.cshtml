@model WebApplication6.Models.Course

@{
    ViewData["Title"] = "Confirm Delete";
}

<h1>Delete Confirmation</h1>

<h3>Are you sure you want to delete this course?</h3>

<div>
    <h4>Course Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LearningObjective)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LearningObjective)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreditPoints)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreditPoints)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DifficultyLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DifficultyLevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="CourseId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
