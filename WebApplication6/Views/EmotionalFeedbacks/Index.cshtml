    @model IEnumerable<WebApplication6.Models.EmotionalFeedback>

@{
    ViewData["Title"] = "Emotional Feedback";
}

<h1 class="text-center mb-4">Emotional Feedback</h1>

<p class="text-end">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        User: <strong>@Html.DisplayFor(modelItem => item.LearnerId)</strong>
                    </h5>
                    <p class="card-text">
                        <strong>Feedback:</strong> @Html.DisplayFor(modelItem => item.EmotionalfeedbackReviews)
                    </p>
                    <p class="small text-muted">
                        <strong>Emotion:</strong> @Html.DisplayFor(modelItem => item.EmotionalState)
                    </p>
                    <p class="small text-muted">
                        <strong>Time:</strong> @Html.DisplayFor(modelItem => item.Timestamp)
                    </p>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.FeedbackId">Details</a>
                        <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.FeedbackId">Edit</a>
                        <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.FeedbackId">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
