@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Collaborative Quests";
}

<h1>Collaborative Quests</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Quest.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Quest.DifficultyLevel</h6>
                    <p class="card-text">@item.Quest.Description</p>
                    <p class="card-text"><strong>Criteria:</strong> @item.Quest.Criteria</p>
                    <p class="card-text"><strong>Quest ID:</strong> @item.Quest.QuestId</p>
                    <p class="card-text"><strong>Deadline:</strong> @item.Collaborative?.Deadline?.ToString("yyyy-MM-dd HH:mm")</p>

                    <!-- Show Learner Info -->
                    <p><strong>Learners in this Quest:</strong></p>
                    <ul>
                        @foreach (var learner in item.Learners)
                        {
                            <li>@learner.FirstName @learner.LastName - @learner.LearnerId</li>
                        }
                    </ul>

                    <!-- Edit Button -->
                    <a href="@Url.Action("Edit", "Quest", new { id = item.Quest.QuestId })" class="btn btn-outline-warning mt-auto">Edit</a>
                </div>
            </div>
        </div>
    }
</div>
