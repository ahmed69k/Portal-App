@model WebApplication6.Models.User

@{
    ViewData["Title"] = "Learner Details";
}

<div class="container">
    <h1>Learner Profile</h1>

    <div class="row">
        <!-- User Info -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    User Info
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Role</dt>
                        <dd class="col-sm-8">@Model.Role</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Learner Info -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    Learner Info
                </div>
                <div class="card-body">
                    @if (Model.Learner != null)
                    {
                        <dl class="row">
                            <dt class="col-sm-4">First Name</dt>
                            <dd class="col-sm-8">@Model.Learner.FirstName</dd>

                            <dt class="col-sm-4">Last Name</dt>
                            <dd class="col-sm-8">@Model.Learner.LastName</dd>

                            <dt class="col-sm-4">Gender</dt>
                            <dd class="col-sm-8">@Model.Learner.Gender</dd>

                            <dt class="col-sm-4">Birth Date</dt>
                            <dd class="col-sm-8">@Model.Learner.BirthDate?.ToShortDateString()</dd>

                            <dt class="col-sm-4">Country</dt>
                            <dd class="col-sm-8">@Model.Learner.Country</dd>

                            <dt class="col-sm-4">Cultural Background</dt>
                            <dd class="col-sm-8">@Model.Learner.CulturalBackground</dd>
                        </dl>
                    }
                    else
                    {
                        <p>No learner information available.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Profile</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete Account</a>
    </div>
</div>
