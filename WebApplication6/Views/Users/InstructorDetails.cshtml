@model WebApplication6.Models.User

<h1>Instructor Profile</h1>
<h2>@Model.Name</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.Role</dd>
</dl>

<div class="col-md-8">
    <div class="card">
        <div class="card-header bg-primary text-white">
            Instructor Info
        </div>
        <div class="card-body">
            @if (Model.Instructor != null)
            {
                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Instructor.Name</dd>

                    <dt class="col-sm-4">Latest Qualification</dt>
                    <dd class="col-sm-8">@Model.Instructor.LatestQualification</dd>

                    <dt class="col-sm-4">Expertise Area</dt>
                    <dd class="col-sm-8">@Model.Instructor.ExpertiseArea</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Instructor.Email</dd>
                </dl>
            }
            else
            {
                <p class="text-danger">No instructor information available.</p>
            }
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Profile</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete Account</a>
</div>
