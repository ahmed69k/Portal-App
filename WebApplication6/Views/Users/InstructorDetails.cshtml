@model WebApplication6.Models.User

@{
    ViewData["Title"] = "Instructor Details";
}

<div class="container">
    <h1 class="text-center">Instructor Profile</h1>

    <div class="row justify-content-center">
        <!-- User Info (Email and Role) -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    User Info
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Role</dt>
                        <dd class="col-sm-8">@Model.Role</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Profile Picture (centered and larger) -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Profile Picture
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                    {
                        <img src="@Model.ProfilePicture" alt="Profile Picture" class="img-fluid" style="width: 100%; max-width: 300px; height: auto;">
                    }
                    else
                    {
                        <p>No profile picture available.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Instructor Info -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Instructor Info
                </div>
                <div class="card-body">
                    @if (Model.Instructor != null)
                    {
                        <dl class="row">
                            <dt class="col-sm-4">Name</dt>
                            <dd class="col-sm-8">@Model.Instructor.Name</dd>

                            <dt class="col-sm-4">Latest Qualification</dt>
                            <dd class="col-sm-8">@Model.Instructor.LatestQualification</dd>

                            <dt class="col-sm-4">Expertise Area</dt>
                            <dd class="col-sm-8">@Model.Instructor.ExpertiseArea</dd>

                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@Model.Instructor.Email</dd>
                        </dl>
                    }
                    else
                    {
                        <p>No instructor information available.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Action buttons -->
    <div class="mt-4 text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">Edit Profile</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">Delete Account</a>
    </div>
</div>
