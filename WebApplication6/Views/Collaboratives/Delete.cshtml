@model WebApplication6.Models.LearnersCollaboration

<h3>Are you sure you want to delete this collaboration?</h3>

<div>
    <h4>Learner: @Model.Learner.FirstName @Model.Learner.LastName</h4>
    <h5>Quest: @Model.Quest.Quest.Title</h5>
    <p><strong>Completion Status:</strong> @Model.CompletionStatus</p>
</div>

<!-- Form for Deletion Confirmation -->
<form asp-action="DeleteConfirmed" method="post">
    <!-- Hidden fields to pass LearnerId and QuestId -->
    <input type="hidden" asp-for="LearnerId" />
    <input type="hidden" asp-for="QuestId" />

    <!-- Confirmation buttons -->
    <button type="submit" class="btn btn-danger">Yes, Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
