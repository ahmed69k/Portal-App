@model IEnumerable<WebApplication6.Models.Assessment>

@{
    ViewData["Title"] = "Assessments";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<p class="mb-4">
    @if (User.IsInRole("Instructor"))
    {
        <a class="btn bt-outlinen-primary me-2" asp-action="Create">Create New Assessment</a>
        <a class="btn btn-outline-secondary" asp-controller="TakenAssessments1" asp-action="Index">Taken Assessments</a>
    }
    @if(User.IsInRole("Learner")){
        <a class="btn btn-outline-primary" asp-controller="TakenAssessments" asp-action="Index">Taken Assessments</a>
    }
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Module)</th>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Criteria)</th>
                <th>@Html.DisplayNameFor(model => model.Weightage)</th>
                <th>@Html.DisplayNameFor(model => model.PassingMarks)</th>
                <th>@Html.DisplayNameFor(model => model.TotalMarks)</th>
                <th>@Html.DisplayNameFor(model => model.Type)</th>
                @if (User.IsInRole("Instructor"))
                {
                    <th class="text-center">Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Module.ModuleId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Criteria)</td>
                    <td>@Html.DisplayFor(modelItem => item.Weightage)</td>
                    <td>@Html.DisplayFor(modelItem => item.PassingMarks)</td>
                    <td>@Html.DisplayFor(modelItem => item.TotalMarks)</td>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    @if (User.IsInRole("Instructor"))
                    {
                        <td class="text-center">
                            <div class="btn-group">
                                <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"
                                   onclick="return confirm('Are you sure you want to delete this assessment?')">Delete</a>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
