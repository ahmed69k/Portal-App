@model IEnumerable<dynamic>

<h2>Assessment Scores</h2>

@if (!Model.Any())
{
    <p>No assessment scores available.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Score</th>
                <th>Total Marks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var score in Model)
            {
                <tr>
                    <td>@score.Title</td>
                    <td>@score.Score</td>
                    <td>@score.TotalMarks</td>
                    
                </tr>
            }
        </tbody>
        
    </table>
    <a href="@Url.Action("Index", "Assessments")" class="btn btn-outline-primary">Back to Assessments</a>
}
