@model WebApplication6.Models.LearnersCollaboration

<h3>Are you sure you want to remove this quest from the learner's collaborations?</h3>

<div>
    <h4>Learner: @Model.Learner.FirstName @Model.Learner.LastName</h4>
    <h5>Quest: @Model.Quest.Quest.Title</h5>
</div>

<!-- Form to remove the quest from the learner's collaborations -->
<form asp-action="Delete" method="post">
    <!-- Hidden fields to pass LearnerId and QuestId to the Delete action -->
    <input type="hidden" asp-for="LearnerId" />
    <input type="hidden" asp-for="QuestId" />

    <!-- Delete button -->
    <button type="submit" class="btn btn-danger">Remove Quest</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
