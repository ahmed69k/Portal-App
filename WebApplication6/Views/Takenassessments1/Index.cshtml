@model IEnumerable<dynamic>

<h2 class="mb-4">Assessment Scores</h2>

@if (!Model.Any())
{
    <p>No assessment scores available.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Assessment ID</th>
                    <th>Score</th>
                    <th>Total Marks</th>
                    <th>Learner ID</th>
                    <th>Learner Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var score in Model)
                {
                    <tr>
                        <td>@score.Title</td>
                        <td>@score.AssID</td>
                        <td>@score.Score</td>
                        <td>@score.TotalMarks</td>
                        <td>@score.LearnerId</td>
                        <td>@score.Name</td>
                        <td class="text-center">
                            <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-AssID="@score.AssID" asp-route-learnerId="@score.LearnerId">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
