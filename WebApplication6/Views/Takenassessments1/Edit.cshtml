@model WebApplication6.Models.Takenassessment

<h2>Edit Taken Assessment</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AssessmentId" />
    <input type="hidden" asp-for="LearnerId" />

    <div class="form-group">
        <label asp-for="ScoredPoint" class="control-label"></label>
        <input asp-for="ScoredPoint" class="form-control" />
        <span asp-validation-for="ScoredPoint" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
