@model WebApplication6.Models.User

<h1>Admin Profile</h1>
<h2>@Model.Name</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.Role</dd>
</dl>

<div>
    <a asp-action="Index" class="btn btn-primary">Manage Users</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit Profile</a>
</div>

<!-- Option to Remove Learner's Personalization -->
@if (User.IsInRole("Admin"))
{
    <form asp-action="RemovePersonalization" method="post" style="margin-top: 10px;">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-warning">Remove Learner's Personalization</button>
    </form>
}

<!-- Optional Message Display -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-success" style="margin-top: 10px;">
        @TempData["Message"]
    </div>
}
